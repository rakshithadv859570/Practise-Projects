<%- layout("/layouts/boilerplate") %>

  <body>
    <div class="row mt-3">
      <div class="col-8 offset-2">
        <h2>Edit the listing</h2>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="needs-validation" novalidate>

          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" class="form-control"
              required />
            <div class="valid-feedback">
              tittle Looks good!
            </div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="listing[description]" class="form-control"
              placeholder="Enter a description"><%= listing.description %></textarea>
            <div class="valid-feedback">Looks good! Great description</div>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">image link</label>
            <input type="text" id="image" name="listing[image]" value="<%= listing.image.url %>" required
              placeholder="Enter an image URL/link" class="form-control" />
            <div class="invalid-feedback"> Enter a url of it</div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-4"><label for="price" class="form-label">price</label>
              <input type="number" id="price" name="listing[price]" placeholder="Enter a price" class="form-control"
                value="<%= listing.price %>" required />
              <div class="invalid-feedback">
                invalid Price
              </div>
            </div>

            <div class="mb-3 col-md-8"> <label for="country" class="form-label">country</label>
              <input type="text" id="country" name="listing[country]" value="<%= listing.country %>"
                placeholder="Enter a country" class="form-control" required />
              <div class="invalid-feedback">
                Enter a valid a country
              </div>
            </div>

            <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <!-- new method listing[location] helped to create a new way to require the data -->
              <input type="text" id="location" name="listing[location]" value="<%= listing.location %>"
                placeholder="Enter a location" class="form-control" required />
              <div class="invalid-feedback">Enter a valid location</div>
            </div>

            <button type="submit" class="btn btn-danger">Update Listing</button>
        </form>
      </div>
    </div>
    </div>
  </body>

